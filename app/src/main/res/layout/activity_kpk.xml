<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/latarkpk"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText1"
        android:layout_width="263dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:background="#89B852"
        android:hint="Masukkan Angka Ke-1"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="#D8D6D6"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#89B852"
        android:hint="Masukkan Angka Ke-2"
        android:textColorHint="#D8D6D6"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/kpk"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="KPK nya di sini"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KPK"
        android:background="@drawable/style_button_hasil"
        android:textAlignment="center"
        android:textColor="#000" />


</LinearLayout>